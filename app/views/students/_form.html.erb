<%= form_with model: @student, html: { multipart: true } do |f| %>

<div>
   <%= f.label :first_name %><br>
   <%= f.text_field :first_name %>
</div><br>

<div>
   <%= f.label :last_name %><br>
   <%= f.text_field :last_name %>
</div><br>

<div>
   <%= f.label :age %><br>
   <%= f.text_field :age %>
</div><br>

<div>
   <%= f.label :contact %><br>
   <%= f.text_field :contact %>
</div><br>

<div>
   <%= f.label :rollnumber %><br>
   <%= f.text_field :rollnumber %>
</div><br>

<div>
   <%= f.label :course_name %><br>
   <%= f.text_field :course_name %>
</div><br>

<h3>Addresses:</h3>
  <div id="addresses">
    <%= f.fields_for :addresses do |address| %>
      <%= render 'address_fields', f: address %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add address', f, :addresses %>
    </div>
  </div>

<div>
  <%= f.submit %>
</div>

<% end %>